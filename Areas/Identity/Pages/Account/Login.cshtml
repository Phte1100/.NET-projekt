@page
@model LoginModel
@{
    ViewData["Title"] = "Logga in";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-5">
        <form id="account" method="post" class="card shadow p-4">
            <h4 class="text-center">Ange dina uppgifter</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">E-post</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Lösenord" />
                <label asp-for="Input.Password" class="form-label">Lösenord</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    Kom ihåg mig
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logga in</button>

            <div class="text-center mt-3">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-link">Registrera ny användare</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
